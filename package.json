{
  "name": "@kalo/ui",
  "version": "0.3.0",
  "description": "A library of React components",
  "repository": {
    "type": "git",
    "url": "https://github.com/kalohq/ui"
  },
  "options": {
    "mocha": "--require src/utils/test/require-hooks --require src/utils/test/init-dom src/**/__tests__/*.{js,jsx}"
  },
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run storybook:build && cd docs && now --static",
    "storybook": "npm run storybook:start",
    "storybook:start": "start-storybook -p 6006",
    "storybook:build": "build-storybook -c .storybook -o docs",
    "compile:css": "./node_modules/.bin/postcss -r -d lib/**/*.css -c postcss.config.js",
    "compile:js": "./node_modules/.bin/babel src/components --out-dir lib --copy-files --ignore __tests__,__stories__ && npm run copy-flow",
    "compile": "npm run compile:js && npm run compile:css",
    "test:coverage": "rm -rf coverage/ && NODE_ENV=test NODE_PATH=./src:./src/components babel-node node_modules/.bin/babel-istanbul cover _mocha -- -R spec $npm_package_options_mocha --timeout 8000",
    "dist": "rimraf lib && npm run compile && cp {package.json,README.md} lib",
    "copy-flow": "flow-copy-source src/components lib --ignore '{index.js,**/__tests__/*,**/__stories__/*}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "author": "The Kalo Team",
  "license": "ISC",
  "devDependencies": {
    "@kalo/eslint-config": "6.0.0",
    "@storybook/addon-info": "3.0.0",
    "@storybook/addon-options": "3.0.0",
    "@storybook/cli": "3.0.0",
    "@storybook/react": "3.0.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-istanbul": "^0.8.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-builtin-extend": "1.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-prettier": "^2.2.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.0.0",
    "expect": "^1.20.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.49.1",
    "flow-copy-source": "^1.2.0",
    "husky": "^0.13.3",
    "jsdom": "7.2.2",
    "lint-staged": "^3.4.2",
    "lodash": "^4.17.2",
    "mocha": "^3.3.0",
    "postcss-cli": "^3.2.0",
    "postcss-css-variables": "^0.7.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "prettier": "^1.5.2",
    "prop-types": "^15.5.8",
    "proxyquire": "^1.7.11",
    "qs": "^5.2.1",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.4.1",
    "react-hotkeys": "^0.9.0",
    "react-intl": "^2.1.5",
    "react-pure-render": "^1.0.2",
    "react-storybook-addon-add-stories-group": "^0.1.0",
    "react-styleguidist": "^5.2.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.16.1",
    "webpack": "^2.5.1"
  },
  "peerDependencies": {
    "qs": "^5.2.1",
    "react": "^15.4.1",
    "classnames": "^2.2.5",
    "lodash": "^4.17.2",
    "prop-types": "^15.5.8",
    "react-addons-css-transition-group": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hotkeys": "^0.9.0",
    "react-intl": "^2.1.5",
    "react-pure-render": "^1.0.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "ignore": [
      "__stories__"
    ]
  }
}
